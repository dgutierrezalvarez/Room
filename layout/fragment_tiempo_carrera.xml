<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo3">

    <ProgressBar
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circulo2"
        android:max="100"
        android:indeterminate="false"
        android:progress="100"
        android:progressDrawable="@drawable/circulo"
        android:rotation="90"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiempoView"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-164dp"
        android:textStyle="bold"
        android:text="00:30:00"
        android:textSize="40dp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/crono"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/crono"/>

    <ProgressBar
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circulo2"
        android:max="100"
        android:indeterminate="false"
        android:progress="100"
        android:progressDrawable="@drawable/circulo"
        android:rotation="90"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiempoView2"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="-164dp"
        android:textStyle="bold"
        android:text="7.30"
        android:textSize="40dp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/km"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/km"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="96dp"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/buttonMapa"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#FD9215"
            android:src="@drawable/mapa" />

        <ImageButton
            android:id="@+id/buttonTiempo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#FD9215"
            android:src="@drawable/tiempo" />

        <ImageButton
            android:id="@+id/buttonStop"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:backgroundTint="#FD9215"
            android:src="@drawable/stop" />


    </LinearLayout>



</LinearLayout>